<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="400" prefWidth="500" spacing="20" style="-fx-background-color: #1e1e1e;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.eventapp.ManagerDashboardController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-font-size: 32px; -fx-text-fill: royalblue;" text="Manager Dashboard" />

    <Button onAction="#createEventButtonClicked" prefHeight="42.0" prefWidth="114.0" style="-fx-background-color: royalblue; -fx-text-fill: white;" text="Create Event" />
    <Button onAction="#myEventsButtonClicked" prefHeight="45.0" prefWidth="112.0" style="-fx-background-color: royalblue; -fx-text-fill: white;" text="My Events" />
    <Button fx:id="feedbackButton" onAction="#feedbackButtonClicked" prefHeight="46.0" prefWidth="116.0" style="-fx-background-color: royalblue; -fx-text-fill: white;" text="Feedback" />
</VBox>
