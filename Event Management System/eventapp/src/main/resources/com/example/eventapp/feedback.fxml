<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import com.example.eventapp.FeedbackController?>

<VBox alignment="CENTER" prefHeight="300" prefWidth="400" spacing="20" style="-fx-background-color: #4169e1;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.eventapp.FeedbackController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-font-size: 24px; -fx-text-fill: #ffffff;" text="Feedback" />

    <TextArea fx:id="feedbackTextArea" prefHeight="150" prefWidth="300" promptText="Enter your feedback here" style="-fx-background-color: #ffffff; -fx-text-fill: #000000;" />
    <Button onAction="#submitFeedbackButtonClicked" style="-fx-background-color: #ffffff; -fx-text-fill: #000000;" text="Submit" />
</VBox>
