<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="400" prefWidth="500" spacing="20" style="-fx-background-color: #1e1e1e;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.eventapp.HelloController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-font-size: 32px; -fx-text-fill: royalblue;" text="Event Management System" />

    <VBox alignment="CENTER" spacing="10">
        <TextField fx:id="usernameField" maxWidth="300" promptText="Username" style="-fx-background-color: #303030; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-height: 40px; -fx-pref-width: 250px;" />
        <PasswordField fx:id="passwordField" maxWidth="300" promptText="Password" style="-fx-background-color: #303030; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-height: 40px; -fx-pref-width: 250px;" />
    </VBox>

    <HBox spacing="20" alignment="CENTER">
        <Button onAction="#customerButtonClicked" style="-fx-background-color: royalblue; -fx-text-fill: white; -fx-font-size: 18px; -fx-pref-height: 40px;" text="Customer Login" />
        <Button onAction="#organizerButtonClicked" style="-fx-background-color: royalblue; -fx-text-fill: white; -fx-font-size: 18px; -fx-pref-height: 40px;" text="Organizer Login" />
    </HBox>
</VBox>