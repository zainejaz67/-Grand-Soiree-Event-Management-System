<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="400" prefWidth="500" spacing="20" style="-fx-background-color: #1e1e1e;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.eventapp.CustomerDashboardController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-font-size: 32px; -fx-text-fill: royalblue;" text="Customer Dashboard" />

    <VBox alignment="CENTER" spacing="10">
        <Button onAction="#eventsButtonClicked" style="-fx-background-color: royalblue; -fx-text-fill: white; -fx-font-size: 18px; -fx-pref-height: 40px; -fx-pref-width: 200px;" text="Events" />
        <Button onAction="#myTicketsButtonClicked" style="-fx-background-color: royalblue; -fx-text-fill: white; -fx-font-size: 18px; -fx-pref-height: 40px; -fx-pref-width: 200px;" text="My Tickets" />
        <Button fx:id="feedbackButton" onAction="#feedbackButtonClicked" style="-fx-background-color: royalblue; -fx-text-fill: white; -fx-font-size: 18px; -fx-pref-height: 40px; -fx-pref-width: 200px;" text="Feedback" />
    </VBox>
</VBox>