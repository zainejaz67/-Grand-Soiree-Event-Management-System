<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="400" prefWidth="600" spacing="20" style="-fx-background-color: #1e1e1e;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.eventapp.ticketscontroller">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label styleClass="title-label" text="My Tickets" textFill="royalblue">
        <font>
            <Font size="18.0" />
        </font>
    </Label>

    <ListView fx:id="ticketListView" prefHeight="300" prefWidth="500" />

    <Button onAction="#loadTickets" style="-fx-background-color: royalblue; -fx-text-fill: white;" text="Load Events" />
</VBox>
